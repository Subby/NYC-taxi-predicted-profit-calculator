<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.aston.taxianalysis.controller.MainController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Label layoutX="155.0" layoutY="36.0" text="NYC Taxi Predicted Profit Calculator">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label layoutX="155.0" layoutY="112.0" text="Enter the distance for your journey (in miles):" />
            <TextField id="inputTextField" fx:id="inputTextField" layoutX="155.0" layoutY="146.0" prefHeight="25.0" prefWidth="237.0" />
            <Button id="submitBtn" layoutX="408.0" layoutY="146.0" mnemonicParsing="false" onAction="#onSubmitBtnPress" text="Submit" />
            <Label id="outputLabel" layoutX="155.0" layoutY="192.0" text="Your predicted profit for the journey is" visible="false" />
      </children>
    </AnchorPane>
  </children>
</VBox>
